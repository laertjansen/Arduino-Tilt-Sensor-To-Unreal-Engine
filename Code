// Tilt sensor as ON/OFF switch

int tiltSensor = 9;
int tiltVal;

int led1 = 2;
int led2 = 3;
int led3 = 4;
int led4 = 5;
int led5 = 6;
int led6 = 7;
int led7 = 8;

void setup() {
  Serial.begin(9600);
  
  pinMode(tiltSensor, INPUT);
  digitalWrite(tiltSensor, HIGH); 

  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(led3, OUTPUT);
  pinMode(led4, OUTPUT);
  pinMode(led5, OUTPUT);
  pinMode(led6, OUTPUT);
  pinMode(led7, OUTPUT);
}

void loop() {
  tiltVal = digitalRead(tiltSensor);
  if (tiltVal == HIGH) {
    digitalWrite(led1, HIGH);
    digitalWrite(led2, HIGH);
    digitalWrite(led6, LOW);
    digitalWrite(led5, LOW);
    Serial.println("G"); // This is the value sent out to Unreal
  }
  else {
    digitalWrite(led1, LOW);
    digitalWrite(led2, LOW);
    digitalWrite(led6, HIGH);
    digitalWrite(led5, HIGH);
    Serial.println("R"); // This is the value sent out to Unreal
  }
  delay(100);
}
